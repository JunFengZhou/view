<resources>
    <!-- 仪表盘自定义属性 -->
    <declare-styleable name="DashboardView">
        <attr name="color_dial_lower" format="color" />
        <attr name="color_dial_middle" format="color" />
        <attr name="color_dial_high" format="color" />
        <attr name="text_size_dial" format="dimension" />
        <attr name="stroke_width_dial" format="dimension" />
        <attr name="radius_circle_dial" format="dimension" />
        <attr name="text_title_dial" format="string" />
        <attr name="text_title_size" format="dimension" />
        <attr name="text_title_color" format="color" />
        <attr name="text_size_value" format="dimension" />
        <attr name="clock_unit_name" format="string" />
        <attr name="animator_play_time" format="integer" />
        <attr name="dashboardName" format="string" />
    </declare-styleable>

    <!--  角标 -->
    <declare-styleable name="CornerMarkView">
        <attr name="cornerText" format="string" />
        <attr name="cornerTextSize" format="dimension" />
        <attr name="cornerTextColor" format="color" />
        <attr name="cornerBgColor" format="color" />
        <attr name="cornerBgWidth" format="dimension" />
        <attr name="cornerTriangle" format="dimension" />
        <attr name="cornerMode" format="enum">
            <enum name="top_left" value="0" />
            <enum name="top_right" value="1" />
            <enum name="bottom_left" value="2" />
            <enum name="bottom_right" value="3" />
            <enum name="top_left_triangle" value="4" />
            <enum name="top_right_triangle" value="5" />
            <enum name="bottom_left_triangle" value="6" />
            <enum name="bottom_right_triangle" value="7" />
        </attr>
    </declare-styleable>
</resources>